---
const {nombre, cargo, imgPersona, profesion, experiencia} = Astro.props;
---



    <div class="flex flex-col w-70 rounded-3xl group shadow-2xl
    view-animate-[--subjectReveal] animate-zoom-in animate-range-[entry_10%_contain_25%]">
        <div class="relative w-70 h-96 overflow-hidden object-left-bottom rounded-t-3xl">
            <div class="absolute z-2 w-full h-full bg-amber-900/80 text-center ml-70 group-hover:ml-0 transition-all duration-400">
                <p class="mt-30 p-4 font-semibold text-2xl">{profesion}</p>
                <p class="text-xl">{experiencia}</p>
            </div>
            <img src={imgPersona} alt="" class="w-full h-full absolute object-cover z-1"/>
        </div>
        <div class="bg-white text-black rounded-b-3xl py-2">
            <h2 class="text-center font-semibold pt-2 px-2">{nombre}</h2>
            <p class="text-center p-2">{cargo}</p>
        </div>
    </div>



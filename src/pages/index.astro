---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/hero.astro';
---

<MainLayout title="Home Page">

	<Hero />

	
	<section class="flex flex-col items-center gap-4 my-10 w-[80%] mx-auto">

		<h1 class="text-3xl font-semibold text-gray-700">Nuestros Colaboradores</h1>
		<div class="flex justify-around gap-10 flex-wrap mt-6">
			<img src="/images/logo1.webp" alt="" class="max-w-[200px]">
			<img src="/images/logo2.webp" alt="" class="max-w-[200px]">
			<img src="/images/logo3.webp" alt="" class="max-w-[200px]">
			<img src="/images/logo4.webp" alt="" class="max-w-[200px]">
			<img src="/images/logo5.webp" alt="" class="max-w-[200px]">
		</div>
	</section>

	<section class="w-full my-10 bg-red-800 text-white">
		<div class="flex md:flex-row flex-col w-[80%] mx-auto p-4 justify-around">
			<div class="max-w-3xl">
				<h1 class="text-3xl font-semibold">Titulo</h1>
				<p>Lorem ipsum, dolor sit amet consectetur 
					adipisicing elit. Reprehenderit sit incidunt
					sapiente consequuntur a distinctio culpa voluptate
					soluta temporibus impedit dolorem dicta, error quasi
					natus qui ex aliquam commodi corporis!</p>
			</div>

			<div>
					<img src="/images/imgprueba.webp" alt="">
			</div>
		</div>
		
	</section>


	<div class="md:grid md:grid-cols-4 md:grid-rows-4  grid-rows-6 gap-4 h-[500px] my-10 w-[80%] m-auto grid ">
		<div class="md:col-span-2 md:row-span-2 row-span-2 col-span-4 bg-amber-700 rounded-3xl ">1</div>
		<div class="md:col-span-2 md:row-span-2 row-span-2 col-start-1 row-start-3 col-span-4 bg-lime-700 rounded-3xl">2</div>
		<div class="md:col-span-2 md:row-span-4 md:col-start-3 md:row-start-1 col-span-4 row-span-2 col-start-1 row-start-5 bg-blue-500 rounded-3xl">3</div>
	</div>

</MainLayout>



---
import Hero2 from "../components/hero2.astro";
import DownloadIcon from "../components/icons/downloadIcon.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>

    <Hero2 srcImg = "../images/fundacion7.webp" titleHero1 = "Estados Financieros: " titleHero2 = "Transparencia y Compromiso" textHero1  = "Creemos en la claridad y la responsabilidad." textHero2  = "Aquí encontrarás nuestros estados financieros, reflejando nuestro compromiso con una gestión honesta y el impacto positivo en nuestra comunidad."/>

    <section class="flex flex-col items-stretch w-[70%] mx-auto my-6 shadow-lg p-6 view-animate-[--subjectReveal] animate-zoom-in animate-range-[entry_10%_contain_25%]">
        <h1 class="bg-red-800 text-white lg:text-2xl text-xl mb-4 px-2 py-1 text-center rounded-full">Estados Financieros Comparativos</h1>

        <div class="flex justify-around ">    
            <div class="text-center">
                <h2 class="text-xl font-semibold mb-4 gap-4">Vigencia</h2>
                
                <div class="px-2 py-1 flex justify-center items-center gap-5">2024 - 2023 <a href="/documents/ESTADOS FINANCIEROS 2024 FMPUV.pdf" download="ESTADOS FINANCIEROS 2024 FMPUV.pdf" class="hover:bg-red-800 rounded-full hover:text-white transition-colors p-1"> <DownloadIcon/></a></div>
            </div>
        </div>
    </section>
</MainLayout>
---
import Hero2 from "../components/hero2.astro";
import DownloadIcon from "../components/icons/downloadIcon.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>

    <Hero2 srcImg = "../images/fundacion7.webp" titleHero1 = "Estados Financieros: " titleHero2 = "Transparencia y Compromiso" textHero1  = "Creemos en la claridad y la responsabilidad." textHero2  = "Aquí encontrarás nuestros estados financieros, reflejando nuestro compromiso con una gestión honesta y el impacto positivo en nuestra comunidad."/>

    <section class="flex flex-col items-stretch w-[70%] mx-auto my-6 shadow-lg p-6 ">
        <h1 class="bg-red-800 text-white lg:text-2xl text-xl mb-4 px-2 py-1 text-center rounded-full view-animate-[--subjectReveal] animate-zoom-in animate-range-[entry_10%_contain_25%] ">Estados Financieros Comparativos</h1>

        <div class="flex justify-around view-animate-[--subjectReveal] animate-zoom-in animate-range-[entry_10%_contain_25%]">    
            <div class="text-center w-full">
                <h2 class="text-2xl font-semibold mb-4 gap-4 w-full border-b-2 pb-3 border-b-gray-400  ">Vigencia</h2>
                
                <div class="px-2 py-1 flex justify-center items-center gap-5 w-full bg-gray-200 rounded-xl font-semibold m-2">2024 - 2023 <a href="/documents/ESTADOS FINANCIEROS 2024 FMPUV.pdf" download="ESTADOS FINANCIEROS 2024 FMPUV.pdf" class="hover:bg-red-800 rounded-full hover:text-white transition-colors p-2 flex justify-center items-center content-center"> <DownloadIcon/></a></div>
                <div class="px-2 py-1 flex justify-center items-center gap-5 w-full bg-gray-50 rounded-xl font-semibold m-2">2023 - 2022 <a href="/documents/ESTADOS FINANCIEROS 2023 FMPUV.pdf" download="ESTADOS FINANCIEROS 2023 FMPUV.pdf" class="hover:bg-red-800 rounded-full hover:text-white transition-colors p-2 flex justify-center items-center content-center"> <DownloadIcon/></a></div>
                <div class="px-2 py-1 flex justify-center items-center gap-5 w-full bg-gray-200 rounded-xl font-semibold m-2">2022 - 2021 <a href="/documents/ESTADOS FINANCIEROS 2022 FMPUV.pdf" download="ESTADOS FINANCIEROS 2022 FMPUV.pdf" class="hover:bg-red-800 rounded-full hover:text-white transition-colors p-2 flex justify-center items-center content-center"> <DownloadIcon/></a></div>
                <div class="px-2 py-1 flex justify-center items-center gap-5 w-full bg-gray-50 rounded-xl font-semibold m-2">2021 - 2020 <a href="/documents/ESTADOS FINANCIEROS 2021 FMPUV.pdf" download="ESTADOS FINANCIEROS 2021 FMPUV.pdf" class="hover:bg-red-800 rounded-full hover:text-white transition-colors p-2 flex justify-center items-center content-center"> <DownloadIcon/></a></div>
            </div>
        </div>
    </section>
</MainLayout>